LiabilityList = list(range(5000, 1000001))
# ^ list for this 
extraLiabDecis = input("Extra liability coverage (Y/N): ").upper()
while True: #god isa watching
    if extraLiabDecis =="Y":
        while True:
            extraLiab = inf.intput("Please enter the liability amount(5,000-1,000,000): ")
            if extraLiab in LiabilityList:
                extraLiabDSP = "${:,.2f}".format(extraLiab)
                print(extraLiabDSP)
                break
            elif extraLiab not in LiabilityList:
                print("Error - Please enter a value within the given choices")
                continue
        break           
    elif extraLiabDecis =="N":
        extraLiab = 0
        break
    else:
        print("Error - Must be a number between given choices")
        continue

